<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - University LMS</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!-- Bootstrap + FontAwesome -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.4.1/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap">

    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background: #F8F9FA;
            color: #2C3E50;
            margin: 0;
            padding: 0;
        }

        /* Sidebar */
        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            width: 230px;
            height: 100%;
            background: #2C3E50;
            padding-top: 40px;
            box-shadow: 2px 0 6px rgba(0, 0, 0, 0.15);
        }

            .sidebar a {
                color: #BDC3C7;
                display: block;
                padding: 14px 20px;
                font-size: 15px;
                font-weight: 500;
                text-decoration: none;
                transition: all 0.2s ease-in-out;
                border-left: 4px solid transparent;
            }

                .sidebar a i {
                    margin-right: 12px;
                    font-size: 16px;
                }

                .sidebar a:hover,
                .sidebar a.active {
                    background: #00C9A7;
                    color: #fff;
                    border-left: 4px solid #fff;
                }

        /* Content */
        .content-wrapper {
            margin-left: 230px;
            padding: 30px;
            min-height: 100vh;
            background: #F4F6F7;
        }

        /* Footer */
        footer {
            text-align: center;
            padding: 15px;
            margin-top: 30px;
            color: #777;
            font-size: 14px;
            border-top: 1px solid #ddd;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <a href="@Url.Action("Dashboard","Students")" class="active"><i class="fa fa-home"></i> Dashboard</a>
        <a href="@Url.Action("ProfileDetails","Students")"><i class="fa fa-id-card"></i> My Profile</a>
        <a href="@Url.Action("StudentChangePassword","Students")"><i class="fa fa-key"></i> Change Password</a>
        <a href="@Url.Action("MyBooks","Students")"><i class="fa fa-book"></i> My Books</a>
        <a href="@Url.Action("SearchBooks","Students")"><i class="fa fa-search"></i> Search Books</a>
        <a href="@Url.Action("FinesandPayments","Students")"><i class="fa fa-money-bill"></i> Fines & Payments</a>
        <a href="@Url.Action("Logout","Login")"><i class="fa fa-sign-out"></i> Logout</a>
    </div>

    <!-- Main Content -->
    <div class="content-wrapper">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year University LMS. All rights reserved.</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
