<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - University LMS</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!-- Bootstrap + FontAwesome -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.4.1/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap">

    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background: #ECF0F1; /* light gray */
            color: #2C3E50;
        }

        /* Sidebar */
        .sidebar {
            position: fixed;
            top: 50px;
            left: 0;
            width: 250px;
            height: 100%;
            background: #2C3E50; /* dark gray */
            color: white;
            transition: all 0.3s;
            padding-top: 20px;
            z-index: 1000;
            box-shadow: 2px 0 6px rgba(0,0,0,0.2);
        }

            .sidebar.collapsed {
                width: 70px;
            }

        .sidebar-header {
            text-align: center;
            padding: 20px 10px;
            font-size: 18px;
            font-weight: bold;
            border-bottom: 1px solid rgba(255,255,255,0.2);
            color: #1ABC9C; /* teal accent */
        }

        .sidebar a {
            color: #BDC3C7; /* light gray text */
            display: block;
            padding: 12px 20px;
            font-size: 15px;
            font-weight: 500;
            text-decoration: none;
            transition: all 0.2s;
        }

            .sidebar a:hover {
                background: #1ABC9C;
                color: #fff;
            }

        .sidebar.collapsed a {
            text-align: center;
            padding: 12px 10px;
        }

            .sidebar.collapsed a span {
                display: none;
            }

        .sidebar a i {
            margin-right: 10px;
        }

        /* Content */
        .content-wrapper {
            margin-left: 250px;
            padding: 25px;
            transition: margin-left 0.3s;
        }

            .content-wrapper.shifted {
                margin-left: 70px;
            }

        /* Navbar */
        .navbar-inverse {
            background-color: #34495E; /* dark slate */
            border: none;
        }

            .navbar-inverse .navbar-brand,
            .navbar-inverse .navbar-nav > li > a {
                color: #ECF0F1;
                font-weight: 500;
            }

                .navbar-inverse .navbar-nav > li > a:hover {
                    color: #1ABC9C;
                }

        .hamburger {
            font-size: 22px;
            cursor: pointer;
            color: white;
            margin-right: 15px;
        }

        .panel-title {
            color: white;
            font-size: 20px;
            font-weight: bold;
            display: inline-block;
            vertical-align: middle;
        }

        footer {
            text-align: center;
            padding: 15px;
            margin-top: 30px;
            color: #555;
            font-size: 14px;
            border-top: 1px solid #ddd;
        }
    </style>
</head>
<body>
    <!-- Top Navbar -->
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <span class="hamburger" onclick="toggleSidebar()">&#9776;</span>
                <span class="panel-title">University LMS Panel</span>
            </div>
            <ul class="nav navbar-nav navbar-right">
                <li><a href="#"><i class="fa fa-user"></i> Librarian</a></li>
                <li>@Html.ActionLink("Logout", "Logout", "Login", null, new { @class = "fa fa-sign-out" })</li>
            </ul>
        </div>
    </div>

    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <i class="fa fa-university"></i> University LMS
        </div>

        <!-- Dashboard -->
        <a href="@Url.Action("Dashboard","Home")"><i class="fa fa-home"></i> <span>Dashboard</span></a>

        <!-- My Profile -->
        <a href="#profileSubmenu" data-toggle="collapse">
            <i class="fa fa-id-card"></i> <span>My Profile</span>
            <i class="fa fa-caret-down pull-right"></i>
        </a>
        <div class="collapse" id="profileSubmenu">
            <a href="@Url.Action("ChangePassword","Home")"><i class="fa fa-key"></i> <span>Change Password</span></a>
            <a href="@Url.Action("ProfileDetails","Home")"><i class="fa fa-user"></i> <span>Profile Details</span></a>
        </div>

        <!-- Manage Books -->
        <a href="#booksSubmenu" data-toggle="collapse">
            <i class="fa fa-book"></i> <span>Manage Books</span>
            <i class="fa fa-caret-down pull-right"></i>
        </a>
        <div class="collapse" id="booksSubmenu">
            <a href="@Url.Action("UploadPage","Home")"><i class="fa fa-plus"></i> <span>Add Books</span></a>
            <a href="@Url.Action("ViewBooks","Home")"><i class="fa fa-list"></i> <span>View Books</span></a>
        </div>

        <!-- Issued Books -->
        <a href="#issuedSubmenu" data-toggle="collapse">
            <i class="fa fa-book-open"></i> <span>Issued Books</span>
            <i class="fa fa-caret-down pull-right"></i>
        </a>
        <div class="collapse" id="issuedSubmenu">
            <a href="@Url.Action("IssuedBooks","Home")"><i class="fa fa-eye"></i> <span>Issued Books</span></a>
            <a href="@Url.Action("ViewaIssuedBooks","Home")"><i class="fa fa-eye"></i> <span>View All Issued Books</span></a>
        </div>

        <!-- Manage Fines -->
        <a href="#finesSubmenu" data-toggle="collapse">
            <i class="fa fa-money-bill"></i> <span>Manage Fines</span>
            <i class="fa fa-caret-down pull-right"></i>
        </a>
        <div class="collapse" id="finesSubmenu">
            <a href="@Url.Action("AddFines","Home")"><i class="fa fa-plus-circle"></i> <span>Add Fine</span></a>
            <a href="@Url.Action("ViewFines","Home")"><i class="fa fa-list-alt"></i> <span>View Fines</span></a>
        </div>
    </div>

    <!-- Main Content -->
    <div class="content-wrapper" id="content">
        @RenderBody()
        <hr />
        <footer>
            <p>Copyright &copy; @DateTime.Now.Year LMS. All rights reserved.</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script>
        function toggleSidebar() {
            document.getElementById("sidebar").classList.toggle("collapsed");
            document.getElementById("content").classList.toggle("shifted");
        }
    </script>                                
</body>
</html>
