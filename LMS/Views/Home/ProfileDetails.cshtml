
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Librarian Profile - Library Management System</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
            line-height: 1.6;
        }

        .container {
            max-width: 700px;
            margin: 40px auto;
            background: #ffffff;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        h2 {
            font-size: 28px;
            color: #2c3e50;
            margin-bottom: 15px;
            border-bottom: 2px solid #3498db;
            padding-bottom: 10px;
        }

            h2 small {
                color: #7f8c8d;
                font-size: 14px;
                margin-left: 10px;
            }

        .profile-details {
            margin-top: 25px;
        }

            .profile-details p {
                color: #34495e;
                font-size: 16px;
                margin: 12px 0;
            }

            .profile-details span {
                font-weight: 600;
                color: #2980b9;
                min-width: 120px;
                display: inline-block;
            }

        .last-updated {
            font-size: 12px;
            color: #7f8c8d;
            text-align: right;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Dashboard <small>Control panel</small></h2>
        <div class="profile-details">
            <p><span>Name:</span> John Doe</p>
            <p><span>Employee ID:</span> LIB-001</p>
            <p><span>Email:</span> john.doe@library.com</p>
            <p><span>Phone:</span> +1-555-123-4567</p>
            <p><span>Joined Date:</span> January 15, 2023</p>
        </div>
        <div class="last-updated">Last updated: September 04, 2025, 11:19 AM IST</div>
    </div>
</body>
</html>     