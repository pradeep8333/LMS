@model LMS.Models.BookUploadViewModel

<div class="container mt-4">
    <h2 class="text-primary mb-3">Library Book Management</h2>
    <hr />

    <!-- Single Book Upload -->
    <div class="card mb-4 shadow">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Add Single Book</h5>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("UploadSingleBook", "LMS", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="row">
                    <div class="col-md-4 mb-3">
                        @Html.LabelFor(m => m.SlNo)
                        @Html.TextBoxFor(m => m.SlNo, new { @class = "form-control", placeholder = "Sl. No", required = "required", type = "number" })
                    </div>
                    <div class="col-md-4 mb-3">
                        @Html.LabelFor(m => m.AccNo)
                        @Html.TextBoxFor(m => m.AccNo, new { @class = "form-control", placeholder = "Accession Number", required = "required" })
                    </div>
                    <div class="col-md-4 mb-3">
                        @Html.LabelFor(m => m.CallNo)
                        @Html.TextBoxFor(m => m.CallNo, new { @class = "form-control", placeholder = "Call Number" })
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        @Html.LabelFor(m => m.Title)
                        @Html.TextBoxFor(m => m.Title, new { @class = "form-control", placeholder = "Title of the Book", required = "required" })
                    </div>
                    <div class="col-md-6 mb-3">
                        @Html.LabelFor(m => m.Author)
                        @Html.TextBoxFor(m => m.Author, new { @class = "form-control", placeholder = "Author" })
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        @Html.LabelFor(m => m.PlaceOfPublisher)
                        @Html.TextBoxFor(m => m.PlaceOfPublisher, new { @class = "form-control", placeholder = "Place of Publisher" })
                    </div>
                    <div class="col-md-4 mb-3">
                        @Html.LabelFor(m => m.Year)
                        @Html.TextBoxFor(m => m.Year, new { @class = "form-control", placeholder = "Year", type = "number" })
                    </div>
                    <div class="col-md-4 mb-3">
                        @Html.LabelFor(m => m.Edition)
                        @Html.TextBoxFor(m => m.Edition, new { @class = "form-control", placeholder = "Edition" })
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        @Html.LabelFor(m => m.Pages)
                        @Html.TextBoxFor(m => m.Pages, new { @class = "form-control", placeholder = "Pages" })
                    </div>
                    <div class="col-md-4 mb-3">
                        @Html.LabelFor(m => m.Volume)
                        @Html.TextBoxFor(m => m.Volume, new { @class = "form-control", placeholder = "Volume" })
                    </div>
                    <div class="col-md-4 mb-3">
                        @Html.LabelFor(m => m.Source)
                        @Html.TextBoxFor(m => m.Source, new { @class = "form-control", placeholder = "Source" })
                    </div>
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.Price)
                    @Html.TextBoxFor(m => m.Price, new { @class = "form-control", placeholder = "Price", type = "number", step = "0.01" })
                </div>

                <button type="submit" class="btn btn-success">Add Book</button>
            }
        </div>
    </div>

    <!-- Bulk Upload -->
    <div class="card shadow">
        <div class="card-header bg-secondary text-white">
            <h5 class="mb-0">Upload Multiple Books (Excel)</h5>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("UploadBooksExcel", "LMS", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="form-group mb-3">
                    <label for="excelFile" class="form-label">Select Excel File (.xlsx or .xls)</label>
                    <input type="file" name="excelFile" id="excelFile" class="form-control" accept=".xlsx,.xls" required />
                </div>
                <button type="submit" class="btn btn-primary">Upload Excel</button>
            }
            <p class="mt-3 text-muted">
                <strong>Note:</strong> The Excel file should have columns in this order:
                <b>Sl. No, Acc.No, Call No, Title, Author, Place of Publishers, Year, Edition, Pages, Vol., Source, Price</b>.
            </p>
        </div>
    </div>
</div>