@{
    Layout = "~/Views/Shared/Student_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 font-sans">
    <!-- Top Navbar --
    <!-- Main Content -->
    <div class="container mx-auto p-8">
        <header class="flex justify-between items-center mb-8">
            <h1 class="text-3xl font-bold">Welcome, [Student Name]</h1>
            <div class="text-gray-600">Last Login: 09/05/2025, 10:01 AM</div>
        </header>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <!-- Stats Card: Books Issued -->
            <div class="bg-white p-6 rounded-lg shadow-md">
                <h3 class="text-lg font-semibold">Books Issued</h3>
                <p class="text-3xl font-bold text-blue-600">3</p>
                <a href="my-books.html" class="text-blue-500 hover:underline">View Details</a>
            </div>
            <!-- Stats Card: Fines Pending -->
            <div class="bg-white p-6 rounded-lg shadow-md">
                <h3 class="text-lg font-semibold">Fines Pending</h3>
                <p class="text-3xl font-bold text-red-600">$5.00</p>
                <a href="fines-payments.html" class="text-blue-500 hover:underline">Pay Now</a>
            </div>
            <!-- Stats Card: Reservations -->
            <div class="bg-white p-6 rounded-lg shadow-md">
                <h3 class="text-lg font-semibold">Book Reservations</h3>
                <p class="text-3xl font-bold text-green-600">2</p>
                <a href="reserve-books.html" class="text-blue-500 hover:underline">Manage Reservations</a>
            </div>
        </div>
        <!-- Quick Links -->
        <div class="mt-8">
            <h2 class="text-2xl font-semibold mb-4">Quick Links</h2>
            <div class="grid grid-cols-2 gap-4">
                <a href="search-books.html" class="bg-blue-500 text-white text-center py-3 rounded-lg hover:bg-blue-600 flex items-center justify-center">
                    <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                    </svg>
                    Search Books
                </a>
                <a href="digital-library.html" class="bg-blue-500 text-white text-center py-3 rounded-lg hover:bg-blue-600 flex items-center justify-center">
                    <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                    </svg>
                    Digital Library
                </a>
            </div>
        </div>
    </div>
</body>
</html>
